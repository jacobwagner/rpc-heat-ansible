---
global_overrides:
  swift:
    part_power: 8
    weight: 100
    min_part_hours: 1
    repl_number: 3
    storage_network: "br-storage"
    replication_network: "br-storage"
    mount_point: /mnt
    drives:
      - name: vdc
      - name: vdd
      - name: vde
    storage_policies:
      - policy:
          name: default
          index: 0
          default: True

{% if groups.infra|length > 0 %}
swift-proxy_hosts:
{% for host in groups.infra %}
  {{ heat_stack_prefix|string }}-{{ host }}:
    ip: {{ hostvars[ host ].management_ip }}
{% endfor %}
{% endif %}

{% if groups.object|length > 0 %}
swift_hosts:
{% for host in groups.object %}
  {{ heat_stack_prefix|string }}-{{ host }}:
    ip: {{ hostvars[ host ].management_ip }}
{% endfor %}
{% endif %}
